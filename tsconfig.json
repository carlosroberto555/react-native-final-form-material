{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "react-native",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./lib",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"include": ["src/*"],
	"exclude": ["node_modules"]
}
